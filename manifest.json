{
    "name": "Edicratic FactCheck",
    "version": "1.0",
    "description": "An AI-powered smart lookup tool for browsing the web.",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "background",
        "tabs",
        "http://*/*",
        "https://*/*",
        "storage",
        "cookies",
        "https://*.edicratic.com/*"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/logo16.png",
            "32": "images/logo32.png",
            "48": "images/logo48.png",
            "128": "images/logo128.png"
        },
        "persistent": true
    },
    "icons": {
        "16": "images/logo16.png",
		"32": "images/logo32.png",
		"48": "images/logo48.png",
		"128": "images/logo128.png"
    },
    "manifest_version": 2
  }
